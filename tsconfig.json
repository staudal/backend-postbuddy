{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "inlineSources": true,
    "module": "commonjs", // Adjust module to commonjs if targeting Node.js with CommonJS
    "moduleResolution": "node", // Use "node" for module resolution
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false // Consider removing skipLibCheck for more thorough type checking
  },
  "include": ["routes/**/*.ts", "app.ts", "custom.d.ts"]
}
