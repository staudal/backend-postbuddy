{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "inlineSources": true,
    "module": "nodenext",
    "moduleResolution": "nodenext", // Ensure correct handling
    "target": "esnext",
    "allowSyntheticDefaultImports": true, // Ensures synthetic handling
    "skipLibCheck": true // Helps compatibility fast-tracking resolution
  },
  "include": ["custom.d.ts", "routes/**/*.ts", "app.ts"]
}
